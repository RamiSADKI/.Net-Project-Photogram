<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mon application ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
   <style>
       .navbar-inverse .navbar-nav > li > a {
           color: #fff;
          
       }
   </style>
    <nav class="navbar navbar-inverse" style="background: #761fc6; padding-left:0;padding-right:25px" >
        <div class="container-fluid">
            <div class="navbar-header">
                <img src="~/Content/Img/logo.png" style="        width: 184px;left: 0; background: white;" />
            </div>
        
            <ul class="nav navbar-nav navbar-right">
                <li><a href="@Url.Action("Index", "Home")"><span class="glyphicon glyphicon-user"></span> Profil</a></li>
                <li><a href="@Url.Action("About", "Home")"><span class="glyphicon glyphicon-log-in"></span> A propos </a></li>
                <li><a href="@Url.Action("Login", "Home")"><span class="glyphicon glyphicon-log-in"></span> Déconnexion </a></li>

            </ul>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Mon application ASP.NET</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
